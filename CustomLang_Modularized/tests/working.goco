\\ While loop
NUMBER n = 5.
NUMBER i = 0.
NUMBER j = 0.

loop(i < n) {
    NUMBER spaces = n - i - 1.
    NUMBER stars = 2 * i + 1.
    
    j = 0.
    loop(j < spaces) {
        DISPLAY(" ").
        j++.
    }
    
    j = 0.
    loop(j < stars) {
        if (j == 0 || j == stars - 1 || i == n - 1) {
            DISPLAY("*").
        } else {
            DISPLAY(" ").
        }
        j++.
    }
    
    DISPLAYNL("").
    i++.
}

\\for loop

NUMBER n = 5.  \\ Height of the diamond

\\ Upper part of the diamond
loop(Number i=1 TILL i<=n ,i++) { 
    loop(Number j=1 TILL j<=n-i ,j++) { 
        DISPLAY(" ").
    }
    loop(Number j=1 TILL j<=2*i-1 ,j++) { 
        DISPLAY("*").
    }
    DISPLAYNL("").  \\ Move to new line
}

\\ Lower part of the diamond
loop(Number i=n-1 TILL i>=1 ,i--) { 
    loop(Number j=1 TILL j<=n-i ,j++) { 
        DISPLAY(" ").
    }
    loop(Number j=1 TILL j<=2*i-1 ,j++) { 
        DISPLAY("*").
    }
    DISPLAYNL("").  \\ Move to new line
}

