\\Nesting of do while with diamond pattern

NUMBER n = 5.
NUMBER i = 1.

\\ Upper Half
do {
    NUMBER spaces = n - i+1.
    NUMBER stars = 2 * i - 1.
    
    \\ Print spaces
    NUMBER j = 1.
    do {
        DISPLAY(" ").
        j++.
    } loop(j <= spaces).
    
    \\ Print stars
    j = 1.
    do {
        DISPLAY("*").
        j++.
    } loop(j <= stars).

    DISPLAYNL("").
    i++.
} loop(i <= n).

\\ Lower Half
i = n - 1.
do {
    NUMBER spaces = n - i+1.
    NUMBER stars = 2 * i - 1.

    \\ Print spaces
    NUMBER j = 1.
    do {
        DISPLAY(" ").
        j++.
    } loop(j <= spaces).

    \\ Print stars
    j = 1.
    do {
        DISPLAY("*").
        j++.
    } loop(j <= stars).

    DISPLAYNL("").
    i--.
} loop(i >= 1).

